{
    "name": "phpro/conventions",
    "description": "Common symfony rules for GrumPHP",
    "type": "package",
    "license": "MIT",
    "prefer-stable": true,
    "require": {
        "brianium/paratest": "^6.3",
        "php-cs-fixer/shim": "^3.7",
        "phpro/grumphp-shim": "^1.9",
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "vimeo/psalm": "Static analysis",
        "psalm/plugin-symfony": "Static analysis",
        "phpstan/phpstan": "Static analysis",
        "roave/security-advisories": "Security",
        "symplify/phpstan-rules": "Object calisthenics"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp-shim": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "class": "PHProConventions\\Composer\\PhproConventionsPlugin",
        "grumphp": {
            "disable-plugin": true
        }
    },
    "require-dev": {
        "azjezz/psl": "^1.9"
    }
}
